<MainWidget>:
    tw_btn: submit_tweet_button
    tw_tbox: tweet_text_box
    t_label: test_label
    orientation: "vertical"
    Label:
        id: test_label
        font_size: 42
        center_x: root.width / 4
        top: root.top - 50
        text: "Input text will appear here"
    BoxLayout:
        height: "40dp"
        width: root.width
        size_hint_y: None
        TextInput:
            id: tweet_text_box
            size_hint_x: root.width - 100
        Button:
            id: submit_tweet_button
            text: "Print Tweet"
            on_press: root.on_click(self)
            size_hint_x: 100 - root.width + root.width