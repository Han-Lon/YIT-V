<LoginScreen>:
    name: "LoginScreen"
    height: "800"
    width: "800"
    Image:
        size: self.width, self.height
        allow_stretch: True
        keep_ratio: False
        source: "img/login_background.png"
    BoxLayout:
        Image:
            id: "twitter-login"
            source: "img/sign-in-with-twitter-gray.png"
            on_touch_down: root.do_login()

<MainWidget>:
    # TODO The refresh button broke after changing this from class Widget to Screen. Need to fix
    name: "MainWidget"
    height: "1000"
    width: "900"
    tw_btn: submit_tweet_button
    tw_tbox: tweet_text_box
    tw_showbox: tweet_show_box
    orientation: "vertical"
    Image:
        size: self.width, self.height
        allow_stretch: True
        keep_ratio: False
        source: "img/login_background.png"
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        pos_hint: {'x':0, 'y':.25}
        size_hint: (.75, 0.75)
        Table:
            id: tweet_show_box
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            padding: 50, 50, 50, 50
    Button:
        id: refresh_button
        text: "Refresh"
        on_press: root.refresh(tweet_show_box)
        pos_hint: {'x':.8, 'y':.8}
        size_hint: (.2, .2)
    BoxLayout:
        id: bottom_bar
        height: "40dp"
        width: root.width
        size_hint_y: None
        TextInput:
            id: tweet_text_box
            font_name: "font/OpenSansEmoji"
            size_hint_x: root.width - 200
        Button:
            id: submit_media_button
            text: "Media Upload"
            # on_press: root.on_click(self)
            on_press: root.upload_media()
            size_hint_x: 100 - root.width + root.width
        Button:
            id: submit_tweet_button
            text: "Post Tweet, G"
            # on_press: root.on_click(self)
            on_press: root.on_click(self)
            size_hint_x: 100 - root.width + root.width

<Row>:
    spacing: 5
    size_hint_y: None
    size_hint_x: 1
    height: 100
    Label:
        text_size: self.width, None
        size_hint: 1, None
        height: self.texture_size[1]
        text: root.txt
        multiline: True